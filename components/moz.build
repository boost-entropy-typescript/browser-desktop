include("../build/node-templates.mozbuild")

DIRS += [
    "about",
    "compat",
    "csd",
    "customizableui",
    "extensions",
    "navigation",
    "onboarding",
    "popups",
    "search",
    "startpage",
    "tabs",
    "widgets",
]

if not CONFIG["MOZILLA_OFFICIAL"]:
    DIRS += ["dev"]

EXTRA_COMPONENTS += [
    "BrowserComponents.manifest", # stub
    "DotComponents.manifest",
]

EXTRA_JS_MODULES += [
    "/browser/components/BrowserContentHandler.sys.mjs",
    "/browser/components/distribution.js",
    "DotBrowserWindow.sys.mjs",
    "DotContentHandler.sys.mjs",
    "DotGlue.sys.mjs",
]

XPIDL_SOURCES += [
    "nsIBrowserHandler.idl",
]

XPIDL_MODULE = "browsercompsbase"

XPCOM_MANIFESTS += [
    "components.conf"
]
