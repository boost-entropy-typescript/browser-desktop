{
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"jsxFactory": "html", // Defines our custom JSX factory
		"jsxFragmentFactory": "Fragment",
		"allowJs": true,
		"checkJs": true,
		"outDir": "dist",
		"baseUrl": ".", // Needed to resolve imports from the root
		"types": [] // Needed to prevent types of node_modules from being included
	},
	"exclude": [
		/* Globbed folders */
		"**/app/profile/**/*",
		"**/locales/**/*",
		"**/build/**/*",
		"**/branding/**/*",
		"**/dist/**/*",
		"**/node_modules/**/*",
		/* Individual files */
		"**/modules/DotAppConstants.sys.mjs" /* Excluded for use of macros */
	]
}
