{
	// Make sure these values are up to date with .gitattributes
	"files.associations": {
		"*.jsm": "javascript",
		"*.configure": "python",
		"*.build": "python",
		"*.mn": "properties",
		"*.mozbuild": "python",
		"*mozconfig*": "makefile",
		"*components.conf*": "python",
		"*.webidl": "idl",
		"*.svg": "html",
		"*REVISION": "plaintext"
	},
	"files.eol": "\n",
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/*/**": true,
		"*.tar.xz": true
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"javascript.updateImportsOnFileMove.enabled": "always",
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.organizeImports": true,
		"source.fixAll": true
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"files.exclude": {
		"**/node_modules": true,
		"**/__pycache__": true
	},
	"macros.list": {
		"license": [
			{
				"command": "type",
				"args": {
					"text": "/* This Source Code Form is subject to the terms of the Mozilla Public\n * License, v. 2.0. If a copy of the MPL was not distributed with this\n* file, You can obtain one at http://mozilla.org/MPL/2.0/. */\n\n"
				}
			},
			"insertSnippet"
		],
		"license (html)": [
			{
				"command": "type",
				"args": {
					"text": "<!-- This Source Code Form is subject to the terms of the Mozilla Public\n   - License, v. 2.0. If a copy of the MPL was not distributed with this\n- file, You can obtain one at http://mozilla.org/MPL/2.0/. "
				}
			},
			"insertSnippet"
		],

		"mozbuild": [
			{
				"command": "type",
				"args": {
					"text": "# -*- Mode: python; indent-tabs-mode: nil; tab-width: 40 -*-\n# vim: set filetype=python:\n# This Source Code Form is subject to the terms of the Mozilla Public\n# License, v. 2.0. If a copy of the MPL was not distributed with this\n# file, You can obtain one at http://mozilla.org/MPL/2.0/.\n\n"
				}
			}
		]
	},
	"gitmoji.showEmojiCode": true,
	"gitmoji.additionalEmojis": [
		{
			"emoji": "🎭",
			"code": ":performing_arts:",
			"description": "Add or update a browser actor"
		},
		{
			"emoji": "🧱",
			"code": ":bricks:",
			"description": "Make changes to build system"
		},
		{
			"emoji": "🍉",
			"code": ":melon:",
			"description": "Improve melon build tool"
		},
		{
			"emoji": "😈",
			"code": ":smiling_imp:",
			"description": "Update imports"
		},
		{
			"emoji": "🧹",
			"code": ":broom:",
			"description": "Clean up code"
		},
		{
			"emoji": "🏁",
			"code": ":checkered_flag:",
			"description": "Fix something on/for Windows"
		},
		{
			"emoji": "🐧",
			"code": ":penguin:",
